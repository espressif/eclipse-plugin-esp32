<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="System View"
            id="com.espressif.esp32.debug.gdbjtag.esp32.commands.category">
      </category>
      <command
            name="Start"
            categoryId="com.espressif.esp32.debug.gdbjtag.esp32.commands.category"
            id="com.espressif.esp32.debug.gdbjtag.esp32.commands.StartSVCommand">
      </command>
      <command
            name="Stop"
            categoryId="com.espressif.esp32.debug.gdbjtag.esp32.commands.category"
            id="com.espressif.esp32.debug.gdbjtag.esp32.commands.StopSVCommand">
      </command>
      <!-- <command
            name="Options"
            categoryId="com.espressif.esp32.debug.gdbjtag.esp32.commands.category"
            id="com.espressif.esp32.debug.gdbjtag.esp32.commands.OptionsSVCommand">
      </command> -->
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.StartSVCommand"
            class="com.espressif.esp32.debug.gdbjtag.esp32.handlers.StartSVHandler">
      </handler>
      <handler
            commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.StopSVCommand"
            class="com.espressif.esp32.debug.gdbjtag.esp32.handlers.StopSVHandler">
      </handler>
      <!-- <handler
            commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.OptionsSVCommand"
            class="com.espressif.esp32.debug.gdbjtag.esp32.handlers.OptionsSVHandler">
      </handler> -->
   </extension>
   <extension
      point="org.eclipse.ui.bindings">
      <key
            commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.StartSVCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+1"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.StopSVCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+2"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <!-- <key
            commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.OptionsSVCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+3"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key> -->
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Esp32"
               mnemonic="M"
               id="com.espressif.esp32.debug.gdbjtag.esp32.menus.Esp32Menu">
            <command
                  commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.StartSVCommand"
                  icon="icons/StartBtn16x16.ico"
                  id="com.espressif.esp32.debug.gdbjtag.esp32.menus.StartSVCommand"
                  label="Start Trace"
                  mnemonic="S">
            </command>
            <command
                  commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.StopSVCommand"
                  icon="icons/StopBtn16x16.ico"
                  id="com.espressif.esp32.debug.gdbjtag.esp32.menus.StopSVCommand"
                  label="Stop Trace"
                  mnemonic="T">
            </command>
            <!-- <command
                  commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.OptionsSVCommand"
                  icon="icons/Tools.gif"
                  id="com.espressif.esp32.debug.gdbjtag.esp32.menus.OptionsSVCommand"
                  label="Trace Options"
                  mnemonic="D">
            </command> -->
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.espressif.esp32.debug.gdbjtag.esp32.toolbars.SystemViewToolbar">
            <command
                  commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.StartSVCommand"
                  icon="icons/StartBtn16x16.ico"
                  tooltip="Start System View"
                  id="com.espressif.esp32.debug.gdbjtag.esp32.toolbars.StartSVCommand">
            </command>
v            <command
                  commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.StopSVCommand"
                  icon="icons/StopBtn16x16.ico"
                  tooltip="Stop System View"
                  id="com.espressif.esp32.debug.gdbjtag.esp32.toolbars.StopSVCommand">
            </command>
            <!-- <command
                  commandId="com.espressif.esp32.debug.gdbjtag.esp32.commands.OptionsSVCommand"
                  icon="icons/Properties.ico"
                  tooltip="System View Options"
                  id="com.espressif.esp32.debug.gdbjtag.esp32.toolbars.OptionsSVCommand">
            </command> -->
         </toolbar>
      </menuContribution>
   </extension>
</plugin>
